generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  name       String?
  password   String   // Hashed
  role       String   @default("USER") // USER, ADMIN
  isApproved Boolean  @default(false)
  employee   Employee?
  notifications Notification[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Employee {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  employeeNumber String?   @unique
  name        String
  email       String       @unique
  position    String?
  department  String?
  shiftStart  String?      // Format: "HH:mm" (Karachi Time)
  shiftEnd    String?      // Format: "HH:mm" (Karachi Time)
  userId      String?      @unique @db.ObjectId
  user        User?        @relation(fields: [userId], references: [id])
  attendance  Attendance[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Attendance {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId String   @db.ObjectId
  checkIn    DateTime @default(now())
  checkOut   DateTime?
  breakStart DateTime?
  breakEnd   DateTime?
  isOnBreak  Boolean  @default(false)
  status     String   @default("PRESENT") // PRESENT, LATE, ABSENT
  notes      String?
}

model Lead {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String?
  phone     String?
  status    String     @default("NEW") // NEW, CONTACTED, QUALIFIED, PROPOSAL_SENT, CLOSED
  source    String?
  notes     String?
  proposals Proposal[]
  documents Document[]
  calls     Call[]
  projects  Project[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Proposal {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  type         String         // WEBSITE, SOCIAL_MEDIA, SEO, OTHER
  status       String         @default("DRAFT") // DRAFT, SENT, ACCEPTED, REJECTED
  value        Float?
  content      String?
  brandLogo    String?
  signature    String?
  proposalDate String?
  
  // Company branding
  customFields Json?          // Store custom key-value pairs
  brandColors  Json?          // Store brand color overrides {primary, secondary, accent}
  headerText   String?        // Custom header content
  footerText   String?        // Custom footer content
  terms        String?        // Terms and conditions
  notes        String?        // Internal notes
  
  // Client branding
  clientLogo        String?   // Client's logo URL
  clientBrandColors Json?     // Client brand colors {primary, secondary, accent}
  
  // Structured content fields
  projectOverview String?     // Brief project description
  objectives      Json?       // Array of objective strings
  scopeOfWork     String?     // Detailed scope description
  timeline        Json?       // Array of {phase, description, duration}
  deliverables    Json?       // Array of deliverable strings
  paymentTerms    Json?       // {schedule: [], milestones: []}
  nextSteps       String?     // Call to action / next steps
  
  // Template reference
  templateId   String?           @db.ObjectId
  template     ProposalTemplate? @relation(fields: [templateId], references: [id])
  
  lead         Lead           @relation(fields: [leadId], references: [id])
  leadId       String         @db.ObjectId
  items        ProposalItem[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Package {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  category    String         // WEB_DESIGN, SEO, MARKETING, COPYWRITING, PORTAL_DESIGN, BRANDING, OTHER
  price       Float
  features    String?        // JSON string array of features
  isActive    Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  proposals   ProposalItem[]
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  status      String   @default("PLANNING") // PLANNING, IN_PROGRESS, REVIEW, COMPLETED, ON_HOLD
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  color       String?  // Hex color for visual identification
  
  // Relationships
  leadId      String?  @db.ObjectId
  lead        Lead?    @relation(fields: [leadId], references: [id])
  
  assignedTo  String[] @db.ObjectId // Array of user IDs
  tasks       Task[]
  
  // Dates
  startDate   DateTime?
  dueDate     DateTime?
  completedAt DateTime?
  
  // Metadata
  tags        String[] // For filtering/categorization
  progress    Int      @default(0) // 0-100 percentage
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  images      String[] // Array of image URLs/Base64
  comments    Comment[]
  credentials Credential[]
}

model Task {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  status      String   @default("TODO") // TODO, IN_PROGRESS, DONE
  priority    String   @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  
  // Relationships
  projectId   String   @db.ObjectId
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  assignedTo  String?  @db.ObjectId // Single user ID
  
  // Dates
  dueDate     DateTime?
  completedAt DateTime?
  
  // Ordering
  order       Int      @default(0) // For drag-and-drop ordering
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  
  projectId String   @db.ObjectId
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  authorId  String   @db.ObjectId
  authorName String  // Denormalized for performance
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Credential {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   // e.g., "API Key", "FTP Password"
  type        String   // API_KEY, PASSWORD, TOKEN, SSH_KEY, OTHER
  username    String?  // For password-type credentials
  value       String   // Encrypted credential value
  url         String?  // Associated URL/endpoint
  notes       String?  // Additional context
  
  projectId   String   @db.ObjectId
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  createdBy   String   @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String
  message   String
  type      String   @default("INFO") // INFO, PROJECT_ASSIGNMENT, COMMENT, ALERT
  isRead    Boolean  @default(false)
  
  link      String?  // Optional link to navigate to
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProposalItem {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  proposal   Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  proposalId String   @db.ObjectId
  package    Package  @relation(fields: [packageId], references: [id])
  packageId  String   @db.ObjectId
  quantity   Int      @default(1)
  price      Float    // Price at time of proposal (may differ from current package price)
  createdAt  DateTime @default(now())
}

model Client {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  company   String?
  email     String?
  phone     String?
  website   String?
  documents Document[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Call {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  lead      Lead     @relation(fields: [leadId], references: [id])
  leadId    String   @db.ObjectId
  duration  Int?     // In seconds
  status    String   // BUSY, NO_ANSWER, COMPLETED
  notes     String?
  timestamp DateTime @default(now())
}

model ProposalTemplate {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  category        String   // WEB_DESIGN, SEO, MARKETING, BRANDING, COPYWRITING, OTHER
  description     String?
  
  // Template content with variable placeholders
  projectOverview String?
  objectives      Json?    // Array of objective strings
  scopeOfWork     String?
  timeline        Json?    // Array of {phase, description, duration}
  deliverables    Json?    // Array of deliverable strings
  paymentTerms    Json?    // {schedule: [], milestones: []}
  nextSteps       String?
  terms           String?
  
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  proposals       Proposal[]
}

model BrandingSettings {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  companyName     String?
  companyAddress  String?
  companyPhone    String?
  companyEmail    String?
  companyWebsite  String?
  logoUrl         String?  // Base64 or cloud storage URL
  primaryColor    String?  // Hex color code
  secondaryColor  String?  // Hex color code
  accentColor     String?  // Hex color code
  defaultHeader   String?  // Default proposal header template
  defaultFooter   String?  // Default proposal footer template
  defaultTerms    String?  // Default terms and conditions
  
  // Workplace Security
  officeIP          String?  // Authorized office IP address
  officeHoursStart  String?  // Format: "HH:mm" (e.g., "09:00")
  officeHoursEnd    String?  // Format: "HH:mm" (e.g., "18:00")
  timezoneOffset    Int?     @default(5) // UTC offset (e.g., 5 for Karachi, -5 for EST)
  isSecurityEnabled Boolean  @default(false)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// ==================== DOCUMENT MANAGEMENT SYSTEM ====================

enum DocumentType {
  PROPOSAL
  CUSTOM_PLAN
  NDA
  AGREEMENT
}

enum DocumentStatus {
  DRAFT
  SENT
  VIEWED
  SIGNED
  REJECTED
  EXPIRED
}

model Document {
  id                String         @id @default(auto()) @map("_id") @db.ObjectId
  type              DocumentType
  name              String
  status            DocumentStatus @default(DRAFT)
  
  // Client relationship (can be lead or client)
  leadId            String?        @db.ObjectId
  lead              Lead?          @relation(fields: [leadId], references: [id])
  clientId          String?        @db.ObjectId
  client            Client?        @relation(fields: [clientId], references: [id])
  
  // Branding
  brandName         String?
  brandLogo         String?
  brandColors       Json?          // {primary, secondary, accent}
  clientLogo        String?
  clientBrandColors Json?          // {primary, secondary, accent}
  
  // Content (type-specific JSON structure)
  content           Json           // Flexible JSON for different document types
  
  // Metadata
  value             Float?         // For proposals/plans
  validUntil        DateTime?      // Expiration date
  signedAt          DateTime?
  signedBy          String?
  signature         String?
  
  // Template reference
  templateId        String?        @db.ObjectId
  template          DocumentTemplate? @relation(fields: [templateId], references: [id])
  
  // Version control
  version           Int            @default(1)
  parentId          String?        @db.ObjectId
  parent            Document?      @relation("DocumentVersions", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  versions          Document[]     @relation("DocumentVersions")
  
  // Audit trail
  sentAt            DateTime?
  viewedAt          DateTime?
  
  createdBy         String?        @db.ObjectId
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
}

model DocumentTemplate {
  id                String         @id @default(auto()) @map("_id") @db.ObjectId
  type              DocumentType
  name              String
  category          String
  description       String?
  
  // Template content (type-specific JSON structure)
  content           Json
  
  // Default settings
  defaultValidDays  Int?           // Auto-expiration in days
  requiresSignature Boolean        @default(false)
  
  isActive          Boolean        @default(true)
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  
  documents         Document[]
}
